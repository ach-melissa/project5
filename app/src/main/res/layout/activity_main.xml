<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quadratic Equation Solver"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <!-- Coefficient a -->
    <EditText
        android:id="@+id/etCoefficientA"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:hint="a"
        android:textColor="@android:color/black"
        android:inputType="numberDecimal"
        android:layout_below="@id/tvTitle"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:ems="3"
        android:minHeight="48dp"
        android:layout_marginTop="20dp"/>

    <!-- x² after a -->
    <TextView
        android:id="@+id/tvX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x² +"
        android:textSize="18sp"
        android:layout_toEndOf="@id/etCoefficientA"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@id/etCoefficientA"
        android:textColor="#000000"/>

    <!-- Coefficient b -->
    <EditText
        android:id="@+id/etCoefficientB"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:hint="b"
        android:textColor="@android:color/black"
        android:inputType="numberDecimal"
        android:layout_below="@id/tvTitle"
        android:layout_toEndOf="@id/tvX2"
        android:layout_marginStart="16dp"
        android:textAlignment="center"
        android:ems="3"
        android:minHeight="48dp"
        android:layout_marginTop="20dp" />

    <!-- x after b -->
    <TextView
        android:id="@+id/tvX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x +"
        android:textSize="18sp"
        android:layout_toEndOf="@id/etCoefficientB"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@id/etCoefficientB"
        android:textColor="#000000"/>

    <!-- Coefficient c -->
    <EditText
        android:id="@+id/etCoefficientC"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:hint="c"
        android:textColor="@android:color/black"
        android:inputType="numberDecimal"
        android:layout_below="@id/tvTitle"
        android:layout_toEndOf="@id/tvX"
        android:layout_marginStart="16dp"
        android:textAlignment="center"
        android:ems="3"
        android:minHeight="48dp"
        android:layout_marginTop="20dp" />


    <Button
        android:id="@+id/btnSolve"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCoefficientA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="#852F2F"
        android:text="Solve" />


    <Button
        android:id="@+id/btnInitialize"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSolve"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="30dp"
        android:background="#852F2F"
        android:text="Reset" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnInitialize"
        android:layout_marginTop="20dp"
        android:text="Result will be displayed here"
        android:textColor="#000000"
        android:textSize="16sp" />
</RelativeLayout>









